# Flask Configuration
FLASK_ENV=development
FLASK_APP=run.py
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/task_manager_dev
DEV_DATABASE_URL=postgresql://username:password@localhost:5432/task_manager_dev
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/task_manager_test

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here

# File Upload Configuration
